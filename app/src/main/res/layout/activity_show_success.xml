<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="25dp"
    android:layout_height="match_parent"
    tools:context="com.example.shivam.eventslistapp.ShowSuccessActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:id="@+id/name_of_event_edit_text"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom_button"
        android:hint="Enter Name of Event"
        android:layout_weight="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        android:id="@+id/name_of_organiser_edit_text"
        android:textStyle="bold"
        android:background="@drawable/custom_button"
        android:hint="Enter Name of Organiser"
        android:layout_weight="1"/>
    <EditText
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/category_of_event_edit_text"
        android:padding="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom_button"
        android:hint="Enter Category of Event"
        android:layout_weight="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:id="@+id/price_of_event_edit_text"
        android:background="@drawable/custom_button"
        android:hint="Enter Price Of Event"
        android:layout_weight="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="15dp"
        android:id="@+id/duration_of_event_edit_text"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom_button"
        android:hint="Duration of Event"
        android:layout_weight="1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="SUBMIT"
        android:id="@+id/submit_event_button"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/custom_button"/>
</LinearLayout>
